@model _24DH111266_MyStore.Models.ViewModel.ProductSearchVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<html>
    <head>
        <meta name="viewport" content="width=device-width"/>
        <title>Search</title>
        <style>
            .search-container, .order-container {
                padding-top: 20px;
                display: flex;
                justify-content: center;
                align-items: center;
            }
        </style>
    </head>
    <body>
        <!--Form tìm kiếm-->
        @using (Html.BeginForm("Index", "Products", FormMethod.Get))
        {
            <div class="form-group search-container">
                @Html.TextBoxFor(m => m.SearchTerm,
               new { @class = "form-control", placeholder = "Nhập tên, mô tả hoặc chủng loại sản phẩm" })

                @* bổ sung thêm trường tìm kiếm theo khoảng giá*@
                @Html.TextBoxFor(m => m.MinPrice, new { @class = "form-control", placeholder = "Nhập Giá Tối Thiểu", Type = "number" })

                @Html.TextBoxFor(m => m.MaxPrice, new { @class = "form-control", placeholder = "Nhập Giá Tối Đa", Type = "number" })
                <button type = "submit" class="btn btn-primary">Tìm Kiếm</button>
            </div>
        }
            @* form kết quả tìm kiếm *@
            @Html.Partial("ProductListPV", Model)
</body>
</html>

