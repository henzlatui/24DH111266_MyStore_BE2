@model _24DH111266_MyStore.Models.ViewModel.SearchProductVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <style>
        img {
            height: 150px;
            max-width: 150px;
        }
    </style>
</head>
<h2 class="bg-info container-fluid">Danh Sách Sản Phẩm</h2>


<table class="table container-fluid">
    <tr>
        <th class="bg-info col-md-2">Hình Ảnh</th>
        <th class="bg-info col-md-2">Tên Sản Phẩm</th>
        <th class="bg-info col-md-2">Đơn Giá</th>
        <th class="bg-info col-md-2">Danh Mục</th>
        <th class="bg-info col-md-4"></th>
    </tr>

    @foreach (var item in Model.Products) 
    {
        <tr>
            <td><img src="@Html.DisplayFor(modelItem => item.ProductImage)" /></td>
            <td> @Html.DisplayFor(modelItem => item.ProductName)</td>
            <td>@Html.DisplayFor(modelItem => item.ProductPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" })
            </td>
        </tr>
    }

</table>
<div class="form-group">
    <div class="col-md-offset-8 col-md-4">
        @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>